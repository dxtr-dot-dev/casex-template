{
  "name": "@dxtr.dev/casex-template",
  "type": "module",
  "version": "2.0.0",
  "description": "Templating engine based on the casex pattern",
  "main": "dist/casex-template.js",
  "types": "dist/casex-template.d.ts",
  "homepage": "https://dxtr.dev/casex-template",
  "repository": "https://github.com/dxtr-dot-dev/casex-template",
  "author": "DXTR.DEV <code@dxtr.dev>",
  "license": "MIT",
  "keywords": [
    "casex",
    "template engine",
    "scaffolding"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup --entry.casex-template src/casex-template.ts --dts --format esm --minify",
    "build:watch": "yarn build --watch",
    "typecheck": "tsc --noEmit src/casex-template.ts",
    "format": "rome format src --write",
    "lint": "rome check src",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest)",
    "test:coverage": "yarn test --coverage",
    "postversion": "git push && git push --tags",
    "ci:check": "yarn check",
    "ci:test": "yarn build && yarn test",
    "preversion": "yarn build && yarn test && yarn lint",
    "version": "yarn build && git add package.json"
  },
  "devDependencies": {
    "@types/jest": "^29.2.6",
    "@types/pluralize": "^0.0.29",
    "jest": "^29.3.1",
    "rome": "^11.0.0",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@dxtr.dev/casex": "^4.0.1",
    "pluralize": "^8.0.0"
  }
}
